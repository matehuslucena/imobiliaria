<p id="notice"><%= notice %></p>

<h1>Listing Reserves</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Customer</th>
      <th>House Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user_name %></td>
        <td><%= reservation.house.address %></td>
        <td><%= link_to 'Show', reservation.house %></td>
        <% if can? :destroy, reservation %>
          <td><%= link_to 'Destroy',  house_reservation_path(reservation.house, reservation.user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

