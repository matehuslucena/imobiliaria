<p id="notice"><%= notice %></p>

<h1>Listing Houses</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Price</th>
      <th>Operation</th>
      <th>Description</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.address %></td>
        <td><%= house.city %></td>
        <td><%= house.state %></td>
        <td><%= house.zip_code %></td>
        <td><%= house.price %></td>
        <td><%= operation_name(house.operation) %></td>
        <td><%= house.description %></td>
        <td><%= house.customer_full_name %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

