<p id="notice"><%= notice %></p>

<h1>Listing Houses</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Price</th>
      <th>Operation</th>
      <th>Description</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <% if user_has_reserved?(current_user.id, house.id) %>
        <tr style="background-color: #ace2ac">
      <% else %>
        <tr>
      <% end %>

        <td><%= house.address %></td>
        <td><%= house.city %></td>
        <td><%= house.state %></td>
        <td><%= house.zip_code %></td>
        <td><%= number_to_currency(house.price) %></td>
        <td><%= house.operation_name %></td>
        <td><%= house.description %></td>
        <td><%= house.user_name %></td>
        <td><%= link_to 'Show', house %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path%>
